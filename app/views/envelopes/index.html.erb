<h1>Listing envelopes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Budget</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @envelopes.each do |envelope| %>
  <tr>
    <td><%= envelope.name %></td>
    <td><%= envelope.budget %></td>
    <td><%= link_to 'Show', envelope %></td>
    <td><%= link_to 'Edit', edit_envelope_path(envelope) %></td>
    <td><%= link_to 'Destroy', envelope, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

